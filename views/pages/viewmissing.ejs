<%- include('../partials/head') %>
<%- include('../partials/header') %>
<body>
    <div class="container">
        <h2>View All Missing Pet Details </h2>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">S/n</th>
                <th scope="col">Pet Animal</th>
                <th scope="col">Pet Name</th>
                <th scope="col">Pet Description</th>
                <th scope="col">Pet Location</th>
                <th scope="col">Pet Area</th>
                <th scope="col">Road Name</th>
              </tr>
            </thead>
            <tbody>
              <%
              if(missingPet.length!=0){
              var i=1;
              missingPet.forEach(function(data){
              %>
              <tr>
                  <td><%=i; %></td>
                  <td><%=data.petanimal %></td>
                  <td><%=data.petname %></td>
                  <td><%=data.petdesc %></td>
                  <td><%=data.petloc %></td>
                  <td><%=data.petarea %></td>
                  <td><%=data.roadname %></td>
              </tr>
              <%  i++; }) %>
              <% } else{ %>
                  <tr>
                      <td colspan="7">No Data Found</td>
                  </tr>
              <% } %>
            
            </tbody>
          </table>
    </div>
</body>
<%- include('../partials/footer') %>