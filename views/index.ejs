<!DOCTYPE html>
<html lang="en">
 <head>
   <meta charset="UTF-8" />
   <meta http-equiv="X-UA-Compatible" content="IE=edge" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <link rel="stylesheet" href="/css/mainstyle.css" />
   <title>Missing Pets Report App</title>
   <script src="/js/jquery.min.js"></script>
   <script>
     $(document).ready(function(){
            $("#search-report").on("change", function(event){
              event.preventDefault();
              //get the ajax stuff now
                GetBindData();
            });
      });
      function GetBindData()
      {
        const searchName = $("#search-report").val();
        $("#disSearch").empty();
        $.ajax({
          url: 'http://localhost:5000/api/reports/' + searchName,
          method: 'GET',
          contentType: "application/json; charset=utf-8",
          dataType: 'json',
          success: function(res) 
          {
            if(res.data !=null && res.data.length > 0 )
            {
              var t = 0;
              for(var i = 0; i < res.data.length; i++)
              {
                t = i+1;
                var tableRow = "<tr>"
                                  + "<td>" + t + "</td>"
                                  + "<td>" + res.data[i].petanimal + "</td>"
                                  + "<td>" + res.data[i].petname + "</td>" 
                                  + "<td>" + res.data[i].petdesc + "</td>"
                                  + "<td>" + res.data[i].petloc + "</td>" 
                                  + "<td> <a href='/report/"+ res.data[i].petid +"'> View Details"+ "</a></td>" 
                                  + "</tr>";
                  $("#disSearch").append(tableRow);
              }
            }
          },
          error: function(error) {
            console.log(error);
          }
        });
      }
    </script>
 </head>
 <body>
